  "dependencies": {
    "@parcel/config-webextension": "^2.8.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.8.3",
    "@parcel/core": "^2.8.3",
    "@parcel/transformer-image": "^2.8.3",
    "@parcel/transformer-typescript-tsc": "^2.8.3",
    "@parcel/validator-typescript": "^2.8.3",
    "@types/chrome": "^0.0.210",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "parcel": "^2.8.3",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "build": "parcel build src/manifest.json --target webext-prod",
    "build-debug": "parcel build src/manifest.json --target webext-prod --no-optimize ",
    "bundle": "cd dist/webext-prod; zip -r ../wwwyzzerdd.zip *",
    "clean": "rm -rf dist/*",
    "check": "tsc --noEmit",
    "start": "parcel src/manifest.json --host localhost --target webext-dev"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  }
