{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "./dist/",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "paths": {
      "~*": ["./*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "strictNullChecks": true,
    "types": ["chrome"]
  },
  "include": [
    "src/**/*"
  ]
}
